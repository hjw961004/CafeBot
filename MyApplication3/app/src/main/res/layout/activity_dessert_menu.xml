<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgc"
    tools:context=".DessertMenu">

    <RadioGroup
        android:id="@+id/radioGroup4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="#4D472A77"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/cake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_cake" />

        <RadioButton
            android:id="@+id/icecream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_icecream" />

        <RadioButton
            android:id="@+id/sandwich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_sandwich" />

        <RadioButton
            android:id="@+id/bakery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_bakery" />

        <RadioButton
            android:id="@+id/salad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_salad" />

        <RadioButton
            android:id="@+id/bingsu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_bingsu" />

        <RadioButton
            android:id="@+id/etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_etc" />
    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goback"
        android:text="@string/goback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup4" />
</androidx.constraintlayout.widget.ConstraintLayout>